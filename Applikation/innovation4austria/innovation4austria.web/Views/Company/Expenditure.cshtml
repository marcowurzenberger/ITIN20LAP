@model innovation4austria.web.Models.ChartModel

@{
    Layout = "~/Views/Shared/_Layouti4a.cshtml";
}

@using Chart.Mvc.ComplexChart
@using Chart.Mvc.SimpleChart
@using Chart.Mvc.Extensions

<div class="bgimg-1 w3-greyscale-min w3-display-container">
    <div class="dashboard-top w3-row">
        <div class="w3-col l4">
            <div class="w3-container">
                <div class="w3-sidenav w3-margin bg-opacity-min bg-box-shadow">
                    <div class="w3-section w3-center">
                        <h3 class="w3-wide w3-text-white title-shadow">FILTER</h3>
                    </div>
                    @using (Ajax.BeginForm("Filter", new AjaxOptions() { UpdateTargetId = "result", InsertionMode = InsertionMode.Replace, HttpMethod = "Post" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="w3-section w3-center w3-margin">
                            <label class="w3-label w3-text-white title-shadow w3-left-align">Firma</label>
                            @Html.DropDownListFor(x => x.FilterCompanies, new SelectList(Model.FilterCompanies, "Id", "Name"), new { @class = "form-control", @name = "filterCompany" })
                        </div>
                        <div class="w3-section w3-center w3-margin">
                            <input type="submit" value="Filtern" class="w3-btn w3-grey w3-text-white w3-hover-white w3-text-black w3-hover-opacity" />
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="w3-col l8" id="result">
            <div class="w3-container">

                @Html.Partial("_List", new innovation4austria.web.Models.ChartModel())

            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Scripts/Chart.js"></script>
}

