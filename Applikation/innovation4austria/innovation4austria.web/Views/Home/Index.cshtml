@model List<innovation4austria.web.Models.BannerModel>

<header id="home" class="bgimg-1 w3-display-container w3-grayscale-min">
    <div class="w3-display-left w3-padding-xxlarge w3-text-white">
        <span class="w3-jumbo w3-hide-small title-shadow">Give your ideas space to grow...</span>
        <br />
        <span class="w3-xxlarge w3-hide-large w3-hide-medium title-shadow">Give your ideas space to grow...</span>
        <br />
        <p>
            <a class="bg-box-shadow w3-btn w3-white w3-padding-large w3-large w3-margin-top w3-opacity w3-hover-opacity-off" href="@Url.Action("Login", "User")">Start today</a>
        </p>
    </div>
    <div class="w3-display-bottomleft w3-padding-xxlarge w3-text-grey w3-large"></div>

    <div class="dashboard-top w3-margin-top w3-container w3-display-topmiddle bg-opacity-min bg-box-shadow w3-centered" style="display: inline-block;" id="banner">
        <div class="w3-center">
            <h2 class="w3-text-white w3-wide title-shadow">Unsere besten Angebote</h2>
            @foreach (var item in Model)
            {
                <div class="w3-section">
                    <label class="w3-text-white title-shadow">Raum</label>
                    <text class="w3-text-white w3-medium w3-text-shadow">@item.RoomName</text><br />
                    <label class="w3-text-white title-shadow">Geb&auml;ude</label>
                    <text class="w3-text-white w3-medium w3-text-shadow">@item.Facility</text><br />
                    <label class="w3-text-white title-shadow">Preis</label>
                    <text class="w3-text-white w3-medium w3-text-shadow">@item.Price</text><br />
                </div>
            }
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {

            $('#banner').fadeIn('fast').delay(7500).fadeOut('slow');
        });

    </script>

</header>