@model List<innovation4austria.web.Models.BookedRoomViewModel>

@if (Model != null && Model.Count > 0)
{
    foreach (var item in Model)
    {
        <div class="bg-opacity-min bg-box-shadow w3-margin">
            <div class="w3-center">
                <div class="w3-section">
                    @Html.HiddenFor(x => item.Id)
                    <label class="w3-label w3-text-white title-shadow">Beschreibung</label>
                    <text class="w3-text-white title-shadow w3-large">@item.Name</text>
                </div>
                <div class="w3-section">
                    <label class="w3-label w3-text-white title-shadow">Ausstattung</label>
                    @foreach (var f in item.Furnishments)
                    {
                        <div><text class="w3-text-white title-shadow w3-large">@f.Name</text></div>
                    }
                </div>
                <div class="w3-section">
                    <label class="w3-label w3-text-white title-shadow">Gebuchte Tage</label>
                    <text class="w3-text-white title-shadow w3-large">@item.DateDiff Tage(e)</text>
                </div>
                <div class="w3-section">
                    <label class="w3-label w3-text-white title-shadow">Von &minus; Bis</label>
                    <text class="w3-text-white title-shadow w3-large">@item.Start.ToShortDateString() &minus; @item.End.ToShortDateString()</text>
                </div>
                <div class="w3-section">
                    <label class="w3-label w3-text-white title-shadow">Preis/Tag</label>
                    <text class="w3-text-white title-shadow w3-large">@item.Price &euro;</text>
                </div>
                <div class="w3-section">
                    <label class="w3-label w3-text-white title-shadow">Gesamtpreis</label>
                    <text class="w3-text-white title-shadow w3-large">@item.TotalPrice &euro;</text>
                </div>
                <div class="w3-section">
                    <a href="@Url.Action("Edit", "Room")/@item.Id" class="w3-btn w3-pale-yellow w3-text-black w3-hover-yellow w3-hover-text-white w3-wide w3-margin">Bearbeiten</a>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="bg-opacity-min w3-margin w3-center">
        <h2 class="w3-text-white title-shadow">Keine Suchergebnisse vorhanden!</h2>
    </div>
}