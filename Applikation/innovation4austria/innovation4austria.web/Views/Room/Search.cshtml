@model innovation4austria.web.Models.ViewRoomModel

<div class="bgimg-1 w3-display-container w3-grayscale-min w3-text-white">
    <div class="w3-display-left w3-padding-xxlarge w3-text-white">
        <span class="w3-jumbo w3-hide-small">we have room. for your ideas.</span>
        <br />
        <span class="w3-xxlarge w3-hide-large w3-hide-medium">we have room. for your ideas.</span>
        <br />
        <span class="w3-large">Give your ideas space to grow...</span>
        <p>
            <a class="w3-btn w3-white w3-padding-large w3-large w3-margin-top w3-opacity w3-hover-opacity-off" href="@Url.Action("Login", "User")">Start today</a>
        </p>
    </div>

    @using (Html.BeginForm())
    {
        <div class="w3-display-topleft w3-padding-xxlarge w3-margin-top w3-show-block w3-opacity-min">
            <!-- Filter -->
            <ul class="w3-card-4 w3-sidenav w3-padding-right">
                <li class="w3-row-padding w3-margin w3-layout-row">
                    <label class="w3-label w3-margin-top w3-hover-opacity-off w3-text-black w3-hover-text-grey">Raum</label>
                    @Html.DropDownListFor(x => x.Filter.RoomList, new SelectList(Model.Filter.RoomList, "Id", "Description"), new { @class= "w3-dropdown-hover w3-margin-top w3-margin-bottom" })
                </li>
                <li class="w3-row-padding w3-margin w3-layout-row">
                    <label class="w3-label w3-margin-top w3-hover-opacity-off w3-text-black w3-hover-text-grey">Geb&auml;ude</label>
                    @Html.DropDownListFor(x => x.Filter.FacilityList, new SelectList(Model.Filter.FacilityList, "id", "name"), new { @class = "w3-dropdown-hover w3-margin-top w3-margin-bottom" })
                </li>
                <li class="w3-hide-small w3-row-padding w3-margin w3-layout-row">
                    <label class="w3-label w3-margin-top w3-hover-opacity-off w3-text-black w3-hover-text-grey">Ausstattung</label>
                    @Html.DropDownListFor(x => x.Filter.FurnishmentList, new SelectList(Model.Filter.FurnishmentList, "id", "description"), new { @class = "w3-dropdown-hover w3-margin-top w3-margin-bottom" })
                </li>
                <li class="w3-row-padding w3-margin w3-layout-row w3-wide">
                    <i class="fa fa-search"></i><input type="submit" class="w3-btn w3-btn-bar" value="Suchen" />
                </li>
            </ul>
        </div>
    }
    <div class="w3-display-right w3-content w3-padding-xlarge">
        <!-- Content -->
        <table class="w3-table w3-border-light-gray">
            <tr class="w3-wide">
                <th>Raumname</th>
                <th>Geb&auml;ude</th>
                <th>Ausstattung</th>
            </tr>
            @foreach (var item in Model.RoomList)
            {
                <tr class="w3-show-inline-block">
                    <td>@item.Description</td>
                    <td>@item.FacilityDescription</td>
                    <td>@item.FurnishmentDescription</td>
                    <td><a class="w3-wide fa fa-angle-right" href="@Url.Action("Room", "Booking", item.Id)">Diesen Raum Buchen</a></td>
                </tr>
            }
        </table>
    </div>
</div>