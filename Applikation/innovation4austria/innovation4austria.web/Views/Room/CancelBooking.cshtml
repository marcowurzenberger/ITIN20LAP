@model innovation4austria.web.Models.CancelBookingModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bgimg-1 w3-display-container w3-grayscale-min">
    @using (Html.BeginForm("Cancelling", "Room", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(x => x.Id)

        <div class="w3-display-middle w3-padding-xxlarge bg-opacity bg-box-shadow w3-center">
            <div class="w3-form">
                <div class="w3-group">
                    <label class="w3-label w3-text-white w3-text-shadow">Raum</label>
                    <div class="w3-text-white w3-text"><text>@Model.Room</text></div>
                </div>
                <div class="w3-group">
                    <label class="w3-label w3-text-white w3-text-shadow">Startdatum</label>
                    <div class="w3-text-white w3-text"><text>@Model.Start.ToShortDateString()</text></div>
                </div>
                <div class="w3-group">
                    <label class="w3-label w3-text-white w3-text-shadow">Enddatum</label>
                    <div class="w3-text-white w3-text"><text>@Model.End.ToShortDateString()</text></div>
                </div>
                <div class="w3-group">
                    <label class="w3-label w3-text-white w3-text-shadow">Gesamtpreis</label>
                    <div class="w3-text-white w3-text"><text>@Model.Price &euro;</text></div>
                </div>
                <div class="w3-group">
                    <input type="submit" value="Ja, stornieren" class="w3-btn w3-red w3-text-white w3-large w3-opacity w3-hover-opacity-off" />
                    <a href="@Url.Action("Dashboard", "User")" class="w3-btn w3-green w3-text-white w3-large w3-opacity w3-hover-opacity-off">Nein, nicht stornieren</a>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

