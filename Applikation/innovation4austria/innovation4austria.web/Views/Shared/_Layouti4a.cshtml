<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    <link rel="apple-touch-icon" sizes="57x57" href="~/Content/img/apple-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="~/Content/img/apple-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="~/Content/img/apple-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="~/Content/img/apple-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="~/Content/img/apple-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="~/Content/img/apple-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="~/Content/img/apple-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="~/Content/img/apple-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="~/Content/img/apple-icon-180x180.png">
    <link rel="icon" type="image/png" sizes="192x192" href="~/Content/img/android-icon-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/Content/img/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="~/Content/img/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Content/img/favicon-16x16.png">
    <link rel="manifest" href="/manifest.json">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="~/Content/img/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">
    <title>innovation4austria</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/mystyle")
    @Styles.Render("~/Content/toastr")
    @Styles.Render("~/Content/datepicker")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="w3-top">
        <ul class="w3-navbar w3-white w3-card-2">
            <li>
                <a href="@Url.Action("Index", "Home")" class="w3-wide w3-text-black">INNOVATION4AUSTRIA Mitarbeiter</a>
            </li>
            <li class="w3-right w3-hide-small">
                @if (!Request.IsAuthenticated)
                {

                    <a href="@Url.Action("Login", "User")">
                        <i class="fa fa-key"></i> Login
                    </a>
                }

            </li>
            @if (Request.IsAuthenticated)
            {
                <li class="w3-right w3-hide-small w3-text-black">
                    <a href="@Url.Action("Logout", "User")"><i class="fa fa-lock"></i> Logout</a>
                </li>
                <li class="w3-right w3-hide-small w3-text-black">
                    <a href="@Url.Action("Dashboard", "i4a")"><i class="fa fa-dashboard"></i> Dashboard</a>
                </li>

            }
            <li>
                <a class="w3-right w3-hide-large w3-hide-medium" onclick="w3_open()" href="javascript:void(0)">
                    <i class="fa fa-bars w3-padding-right w3-padding-left"></i>
                </a>
            </li>
        </ul>
    </div>
    <nav class="w3-sidenav w3-black w3-card-2 w3-animate-left w3-hide-medium w3-hide-large" id="mySidenav" style="display: none;">
        <a class="w3-large w3-padding-16 fa fa-close" onclick="w3_close()" href="javascript:void(0)"></a>
        @if (Request.IsAuthenticated)
        {
            <a onclick="w3_close()" href="@Url.Action("Logout", "User")">Logout</a>
            <a onclick="w3_close()" href="@Url.Action("Dashboard", "i4a")">Dashboard</a>
        }
        @if (!Request.IsAuthenticated)
        {
            <a onclick="w3_close()" href="@Url.Action("Login", "User")">Login</a>
        }

    </nav>

    @RenderBody()

    <footer class="w3-center w3-black w3-padding-64">
        <a class="w3-btn w3-padding w3-light-grey w3-hover-grey" href="@Url.Action("Index", "Home")">
            <i class="fa fa-home w3-margin-right"></i>Home
        </a>
        <p class="w3-hover-text-green">
            Powered by &copy; innovation4austria
        </p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/toastr")
    @Scripts.Render("~/bundles/datepicker")
    @Scripts.Render("~/bundles/jquery-ajax")
    @RenderSection("scripts", required: false)
    @{
        if (TempData[Constants.WARNING_MESSAGE] != null)
        {
            <script>
                toastr.options = { "positionClass": "toast-top-center" };
                toastr['warning']('@TempData[Constants.WARNING_MESSAGE]');
            </script>
        }
        if (TempData[Constants.ERROR_MESSAGE] != null)
        {
            <script>
                toastr.options = { "positionClass": "toast-top-center" };
                toastr['error']('@TempData[Constants.ERROR_MESSAGE]');
            </script>
        }
        if (TempData[Constants.SUCCESS_MESSAGE] != null)
        {
            <script>
                toastr.options = { "positionClass": "toast-top-center" };
                toastr['success']('@TempData[Constants.SUCCESS_MESSAGE]');
            </script>
        }
    }
    <script>

        // Toggle between showing and hiding the sidenav when clicking the menu icon
        var mySidenav = document.getElementById("mySidenav");

        function w3_open() {
            if (mySidenav.style.display === 'block') {
                mySidenav.style.display = 'none';
            } else {
                mySidenav.style.display = 'block';
            }
        }

        // Close the sidenav with the close button
        function w3_close() {
            mySidenav.style.display = "none";
        }

        $.ajaxSetup();
    </script>
</body>
</html>
